/* ✅ PERFORMANCE: Critical CSS for above-the-fold content */
@layer base {
  /* Optimize font loading */
  html {
    font-display: swap;
  }

  /* Critical styles for hero section */
  .hero-gradient {
    background: linear-gradient(135deg, #1e293b 0%, #1e40af 50%, #1e293b 100%);
  }

  /* Optimize animations */
  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  /* Critical button styles - removed hover effects */
  .btn-primary {
    @apply bg-gradient-to-r from-pink-600 to-rose-600 text-white px-6 py-3 rounded-xl font-semibold transition-all duration-300;
  }

  .btn-outline {
    @apply border-2 border-white text-white px-6 py-3 rounded-xl font-semibold transition-all duration-300 backdrop-blur-md;
  }

  /* Global heading sizes for desktop/tablet (keep mobile as-is via media query below) */
  h1 {
    font-size: 60px !important;
    line-height: 1.1 !important;
    font-family:
      "Red Hat Display", "Poppins", "Inter", system-ui, sans-serif !important;
  }
  h2 {
    font-size: 36px !important;
    line-height: 1.2 !important;
    font-family:
      "Red Hat Display", "Poppins", "Inter", system-ui, sans-serif !important;
  }
  h3 {
    font-size: 22px !important;
    line-height: 1.3 !important;
    font-family:
      "Red Hat Display", "Poppins", "Inter", system-ui, sans-serif !important;
  }
  /* Make headings bold by default */
  h1,
  h2,
  h3,
  h4 {
    font-weight: 800 !important;
  }

  /* Override Tailwind text size classes for headings */
  h1.text-4xl,
  h1.text-5xl,
  h1.text-6xl,
  h1.text-7xl,
  h1.text-8xl,
  h1.text-9xl {
    font-size: 60px !important;
    font-family:
      "Red Hat Display", "Poppins", "Inter", system-ui, sans-serif !important;
  }
  h2.text-2xl,
  h2.text-3xl,
  h2.text-4xl,
  h2.text-5xl {
    font-size: 36px !important;
    font-family:
      "Red Hat Display", "Poppins", "Inter", system-ui, sans-serif !important;
  }
  h3.text-xl,
  h3.text-2xl,
  h3.text-3xl {
    font-size: 22px !important;
    font-family:
      "Red Hat Display", "Poppins", "Inter", system-ui, sans-serif !important;
  }
}

/* ✅ PERFORMANCE: Optimize rendering and reduce layout thrashing */
@layer utilities {
  /* Optimize for GPU acceleration */
  .gpu-accelerate {
    transform: translateZ(0);
    will-change: transform;
  }

  /* Optimize for paint efficiency */
  .paint-efficient {
    contain: layout style paint;
  }

  /* Optimize for composite operations */
  .composite-efficient {
    transform: translate3d(0,0,0);
  }

  /* Optimize for image rendering */
  .img-optimize {
    image-rendering: -webkit-optimize-contrast;
    image-rendering: crisp-edges;
  }

  /* Optimize for scroll performance */
  .scroll-optimize {
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
  }

  /* Optimize for memory usage */
  .memory-efficient {
    contain: strict;
  }

  /* Optimize for reduced motion */
  @media (prefers-reduced-motion: reduce) {
    * {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }
  }
}

/* ✅ PERFORMANCE: Optimize scroll behavior */
@layer utilities {
  .scroll-smooth {
    scroll-behavior: smooth;
  }

  /* Reduce motion for users who prefer it */
  @media (prefers-reduced-motion: reduce) {
    .scroll-smooth {
      scroll-behavior: auto;
    }

    .animate-pulse {
      animation: none;
    }
  }
}

